<!-- Container (Services Section) -->
<div id="experience" class="container-fluid text-center">
    <h2>Experience</h2>
    <h4>Professional Work</h4>
    <br>
    <div class="row">
        @for (var i = 0; i < Setup.ProfessionalWork.Count; i++)
        {
            <div class="col-sm-3">
                <div class="prj" onclick="DisplayProject('ProfessionalWork', @i);" >
                    <img class="normal" src="@String.Concat(Setup.ProfessionalWork[i].TileRef, ".png")" alt="" title="" max-width="250" max-height="250" />
                    <img class="onhover" src="@String.Concat(Setup.ProfessionalWork[i].TileRef, "Top.png")" alt="@Setup.ProfessionalWork[i].Name" title="@Setup.ProfessionalWork[i].Name" max-width="250" max-height="250" />
                </div>
                <p><strong>@Setup.ProfessionalWork[i].Name</strong></p>
                <p>@String.Join(", ", Setup.ProfessionalWork[i].SkillList.ToArray())</p>
            </div>
        }
    </div>

    <br><br>
    <h4>Web Development</h4>
